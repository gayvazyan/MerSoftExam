@page
@model ShopAppMerSoftExam.UI.Pages.Directory.Clients.CreateModel
@{
     ViewData["Title"] = "Ավելացնել";
}

<form method="post" enctype="multipart/form-data">
        <div class="card card-input">
            <div class="card-body p-0 d-flex align-items-center">
                <i class="nav-icon icon-check bg-success p-4 px-5 font-2xl mr-3 text-white"></i>
                <div>
                    <div class="text-value-sm text-info">@ViewData["Title"]</div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body row">
                <div class="m-3 p-3 w-100" style="max-width:900px">
                    <div>
                        <partial name="_ValidationSummary" />
                        @if (Model.Errors.Count > 0)
                        {
                            <div class="alert alert-danger" role="alert">
                                <ul>
                                    @foreach (var error in Model.Errors)
                                    {
                                        <li>@error.Code: @error.Description</li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <label class="text-info" asp-for="Create.Code">Կոդ</label>
                            <input class="form-control" type="text" asp-for="Create.Code">
                            <span asp-validation-for="Create.Code" class="text-danger"></span>
                        </div>
                         <div class="col-4">
                            <label class="text-info" asp-for="Create.Phone">Հեռախոս</label>
                            <input class="form-control" type="text" asp-for="Create.Phone">
                            <span asp-validation-for="Create.Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-4">
                            <label class="text-info" asp-for="Create.FirstName">Անուն</label>
                            <input class="form-control" type="text" asp-for="Create.FirstName">
                            <span asp-validation-for="Create.FirstName" class="text-danger"></span>
                        </div>
                         <div class="col-4">
                            <label class="text-info" asp-for="Create.LastName">Ազգանուն</label>
                            <input class="form-control" type="text" asp-for="Create.LastName">
                            <span asp-validation-for="Create.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-4">
                            <label class="text-info" asp-for="Create.Discount">Զեղչ</label>
                            <input class="form-control" type="number" asp-for="Create.Discount">
                            <span asp-validation-for="Create.Discount" class="text-danger"></span>
                        </div>
                    </div>
                    <br />

                   
                  

                    <div style="height:20px"></div>
                    <div class="row border-top margin-top-20" style="padding-top:20px">
                        <div class="col-12">
                            <button class="btn btn-success text-white"> <i class="nav-icon icon-check"></i> Ստեղծել</button>
                            <a class="btn btn-secondary" asp-page="/Directory/Clients/Index"> <i class="nav-icon icon-close"></i> Չեղարկել</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
