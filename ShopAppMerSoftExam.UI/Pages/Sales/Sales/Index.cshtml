@page
@model ShopAppMerSoftExam.UI.Pages.Sales.Sales.IndexModel


@{
    ViewData["Title"] = "Վաճառք";
}

<form method="post" id="form">
    <div class="card margin-top-20">
        @* ----- START Toolbar ---- *@
        <div class="card-header" style="padding:5px;">
            <a href="/Sales/Sales/Create" class="btn btn-success" title="Ավելացնել">  <i class="nav-icon icon-plus"></i> Ավելացնել</a>
        </div>

        @* ----- END Toolbar ---- *@

        @* ----- START Grid ---- *@
        <div class="grid card-body p-0">
            <table class="table table-responsive-sm table-striped">
                <thead>
                    <tr style="text-align:center;color:black">
                        <td><b>Կտրոնի N</b></td>
                        <td><b>Գնորդ</b></td>
                        <td><b>Գնորդի զեղչ</b></td>
                        <td class="commands"><b>Հրամաններ</b></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.InputList)
                    {
                        <tr style="text-align:center;color:black">
                            <td>@item.ChekNumber</td>
                            <td>@item.FullName</td>
                            <td>@item.ClientDiscounte</td>
                            <td style="min-width:200px" class="commands">

                                <a href="/Sales/SalesItem/@item.Id" class="btn btn-primary" title="Ավելացնել">
                                    <i class="nav-icon icon-docs"></i> Ապրանքների ցանկ
                                </a>

                                <a class="btn btn-info text-white" href="/Sales/Sales/Update/@item.Id" title="Թարմացնել">
                                    <i class="nav-icon icon-pencil"></i>
                                </a>

                                <a class="btn btn-danger" href="/Sales/Sales/Delete/@item.Id" title="Հեռացնել">
                                    <i class="nav-icon icon-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @* ----- END Grid ---- *@
    </div>
</form>